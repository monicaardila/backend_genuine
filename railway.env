# Variables de entorno para Railway
APP_NAME=Genuine School API
APP_ENV=production
APP_DEBUG=false
APP_URL=https://tu-proyecto.railway.app

# Base de datos PostgreSQL (Railway la proporcionará automáticamente)
DB_CONNECTION=pgsql

# JWT Secret (generar uno nuevo para producción)
JWT_SECRET=tu_jwt_secret_aqui

# Logs
LOG_CHANNEL=stack
LOG_LEVEL=error

# Cache y sesiones
CACHE_DRIVER=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Mail
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@genuineschool.com"
MAIL_FROM_NAME="Genuine School"
